<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_menu"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.game_app.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/HomeToMenu"
            app:destination="@id/menuFragment" />
        <action
            android:id="@+id/HomeToLibrary"
            app:destination="@id/libraryFragment" />
        <action
            android:id="@+id/HomeToSettings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/HomeToLobby"
            app:destination="@id/lobbyFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.game_app.menu.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/MenuToLobby"
            app:destination="@id/lobbyFragment" />
    </fragment>
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.game_app.library.LibraryFragment"
        android:label="LibraryFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.game_app.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/lobbyFragment"
        android:name="com.example.game_app.lobby.LobbyFragment"
        android:label="LobbyFragment" >
        <action
            android:id="@+id/LobbyToMenu"
            app:destination="@id/menuFragment" />
        <action
            android:id="@+id/LobbyToHome"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>